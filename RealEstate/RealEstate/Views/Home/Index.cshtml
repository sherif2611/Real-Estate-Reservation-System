    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Hachi+Maru+Pop&family=Noto+Nastaliq+Urdu&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Work+Sans:ital,wght@0,200;0,300;0,400;0,500;0,700;0,800;1,600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="cont">
        <div class="intro">
            <div class="introBody">
                <p>Welcome to Real Estate System</p>
                <p class="text">Search for Real Estates</p>
                <form asp-action="index" asp-controller="Home" method="get">
                    <div class="input-group" style="position:relative;left:150px;">
                    <div class="form-outline" data-mdb-input-init>
                        <input placeholder="Search by City or Real Estate Area" id="search-focus" type="search" class="form-control" name="search" />
                    </div>
                    <button type="submit" class="btn btn-primary" style="background-color:#3aa9ab" data-mdb-ripple-init>
                        <i class="fas fa-search"></i>
                    </button>
                </div>
                </form>

            </div>
        </div>
    </div>
    <div class="all">
        <h1>Real Estates</h1>
        <div class="realEstates">
            <br />
            <div class="name_real">
                <p style="color:cadetblue;font-weight:100;margin-top:20px;">Floors</p>
            </div>
            <div class="floor">
                @{
                    var list = ViewData["floor"] as List<RealEstate>;
                        @if (list.Count!=0)
                        {
                            <div class="row row-cols-1 row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-2 ms-2 mt-5">
                            @foreach (var item in list)
                            {
                                <div class="card" style="width: 18rem;">
                                    @if (item != null && item.MainImg != null)
                                    {
                                        var base64Img = Convert.ToBase64String(item.MainImg);
                                        <img src="data:image/png;base64,@base64Img" class="card-img-top" style="height:200px;" alt="Image">
                                    }
                                    @if (User.IsInRole("user"))
                                    {
                                        <div class="card-body">
                                            <div style="height:150px;">
                                                <h5 class="card-title" style="color:cadetblue">@item?.Title</h5>
                                            </div>
                                            <a class="btn btn-primary" asp-controller="RealEstate" asp-action="GetRealEstate" asp-route-id="@item.Id" style="margin-left:90px;">View</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="card-body">
                                            <div style="height:150px;">
                                                <h5 class="card-title" style="color:cadetblue">@item?.Title</h5>
                                            </div>
                                            <a class="btn btn-primary" asp-controller="RealEstate" asp-action="WaitingPost" asp-route-id="@item.Id" style="margin-left:90px;">View</a>
                                        </div>
                                    }
                                    
                                </div>

                            }
                            </div>
                        }
                        else
                        {
                            <h2 style="color:Red;text-align:center;">No data available</h2>
                        }
                }
            </div>

