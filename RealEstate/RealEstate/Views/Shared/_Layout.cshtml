<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <title>@ViewData["Title"] - RealEstate</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEstate.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Hedvig+Letters+Sans&family=Inter:wght@400;500&family=Lato&family=Libre+Franklin&family=Nunito+Sans:opsz,wght@6..12,500&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="_nav">
            <div class="containerr">
                <a href="#" id="logo" class="pull-left"><img class="image" src="~/imgs/logo.png"></a>
                    <ul>
                        <li class="nav-item">
                            <a class="link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                       
                        @if (User?.Identity?.IsAuthenticated == false)
                        {
                            <li class="nav-item">
                                <a class="link" asp-area="" asp-controller="Account" asp-action="SignUp">Sign Up</a>
                            </li>
                            <li class="nav-item">
                                <a class="link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
                        </li>
                    }
                    else
                    {
                        if (User.IsInRole("user"))
                        {
                            <li class="nav-item">
                                <a class="link" asp-area="" asp-controller="RealEstate" asp-action="AddRealEstate">Add new Real Estate</a>
                            </li>
                            <li class="nav-item">
                                <a class="link" asp-area="" asp-controller="RealEstate" asp-action="GetMyPosts">My Posts</a>
                            </li>
                            <li class="nav-item">
                                <a class="link" asp-area="" asp-controller="RealEstate" asp-action="GetMyReservation">My Reservations</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="link" asp-area="" asp-controller="RealEstate" asp-action="GetWaitingPosts">Waiting Posts</a>
                            </li>
                            <li class="nav-item">
                                <a class="link" asp-area="" asp-controller="User" asp-action="GetAllUsers">Users</a>
                            </li>
                        }
                        <li class="nav-item">
                                <a class="link" asp-area="" asp-controller="Account" asp-action="Logout">Log Out</a>
                        </li>
                    }
                    </ul>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> 
    <footer>
        &copy; 2023 Real Estate System. All rights reserved. Contact us on Email : sherifebrahim2212@gmail.com
    </footer>
</body>
</html>